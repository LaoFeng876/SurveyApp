<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_q11"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fengzc.surveyapp.Q11Activity">

    <Button
        android:text="Please choose one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/q11_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    <TextView
        android:text="11.Do you satisfied with dining hallâ€™s environment?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_q11"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="14pt"
        android:layout_above="@+id/rg_q11"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="68dp" />

    <RadioGroup
        android:id="@+id/rg_q11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/q11_button"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:text="Yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2q11"
            android:layout_weight="1" />

        <RadioButton
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonq11"
            android:layout_weight="1" />
    </RadioGroup>

</RelativeLayout>
